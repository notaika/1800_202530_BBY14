<%- include('partials/head') %> <%- include('partials/header') %>

<main class="p-0 mb-5" id="single-community-container">
  <div
    class="community-banner position-relative mb-4 px-5"
    <div
    class="card-img-overlay d-flex flex-column justify-content-end container pb-4">
    <h1 class="display-4 fw-bold text-white mb-0" id="community-title"></h1>
    <p class="fs-5 text-white mb-1" id="community-desc"></p>
    <div class="community-creator-container mb-3">
      <span
        class="profile-community badge text-dark small rounded-pill px-2 py-2"
        ><i class="bi bi-houses"> </i> <span>Created by:</span>
        <a href="#" id="community-creator"></a>
      </span>
    </div>
    <div id="community-action-container">
      <button class="btn btn-warning fw-bold disabled">Loading...</button>
    </div>
  </div>

  <div class="container">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <h3 class="fw-bold mb-0">Community Recipes</h3>
    </div>

    <div class="row g-4" id="community-recipes-grid">
      <div class="col-12 text-center py-5">
        <div class="spinner-border text-success" role="status">
          <span class="visually-hidden">Loading...</span>
        </div>
      </div>
    </div>
  </div>
</main>

<script type="module" src="/js/community.js"></script>

<%- include('partials/navbar', {active: 'community'}) %> <%-
include('partials/footer') %> <%- include('partials/scripts') %>
