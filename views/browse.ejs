<%- include('partials/head') %> <%- include('partials/header') %>

<!-- Floating search bar (only shown on Home page) -->
<div class="floating-search px-2">
  <!-- Search form container (pill shape handled in CSS) -->
  <form class="search-form d-flex align-items-center">
    <!-- Search icon on the left -->
    <i class="bi bi-search fs-5 ms-2"></i>

    <!-- Search text input -->
    <input
      type="search"
      class="form-control border-0 bg-transparent"
      placeholder="Search"
      aria-label="Search" />

    <!-- Search button on the right (return icon) -->
    <button class="btn btn-link me-2" type="submit" aria-label="Search">
      <i class="bi bi-arrow-return-left"></i>
    </button>
  </form>
</div>

  <!-- Favourites button and drawer -->
<div class="page-toolbar d-flex justify-content-end align-items-center gap-2 px-2">
  <button class="btn btn-outline-forest fav-open">
    <i class="bi bi-heart-fill me-1"></i> Favourites
  </button>
</div>


<!-- ===================================================
     Recipe Feed Area (Home Page)
     Shows 2 cards per row, alternating layout
     =================================================== -->
<div class="pt-2 pb-2 browse-feed px-1">
  <div class="row row-cols-2 g-3" id="browse-grid"></div>
</div>

<%- include('partials/navbar', {active: 'browse'}) %>
<%- include('partials/favourites') %>
<%- include('partials/footer') %> <%- include('partials/scripts') %>
